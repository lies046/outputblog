.content
  .content__left
    .content__left--image
      - if post.image.present?
        =link_to image_tag(post.image.url(:thumb)), post_path(post.id)
      - else
        =link_to image_tag("noimage.png",:size =>'80x80'), post_path(post.id)
  .content__right
    .content__right__top
      = link_to post.title, post_path(post.id), class: "content__right__top--title"
    .content__right__bottom
      .content__right__bottom--userName
        = link_to post.user.nickname, user_path(post.user), class: "content__right__bottom--userName--btn"
      .content__right__bottom--date
        = post.created_at.strftime("%Y/%m/%d(%a)")
      %div{:id => "likes_buttons_#{post.id}"}
        = render partial: 'likes/like', locals: { post: post, likes: @likes}



