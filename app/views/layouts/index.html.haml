%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title OutPut Blog
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
  .top
    .top-image
      .top__logo
        %h1 OutPut Blog
        = link_to "Singup", new_user_registration_path, class: "top__btn signup"
        = link_to "Singin", new_user_session_path, class: "top__btn login"
        = link_to "for viewing", posts_path,class: "top__btn forviewing"