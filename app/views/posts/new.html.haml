.contents
  .content__title
    Create new article
  .post-text
    = form_with model:@post, class: :form, local: true do |f|
      = render 'layouts/error_messages',model: f.object
      = f.text_field :title, placeholder:"Title within 30 characters",class: :form__title
      = f.text_area :content, placeholder:"Text", class: :form__text
      #img_field{:onclick => "$('#file').click()"}
        - if @post.image.url.present? 
          = image_tag(@post.image.url)
        - else
          %i.fas.fa-camera-retro
          %i.fas.fa-plus
      = f.file_field :image, class: "image", style: "display:none;", id: "file"
      = f.submit 'Post', class: "form__btn"
